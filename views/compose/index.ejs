<form action="/compose" method="post" class="compose">
    <div style="margin-bottom:5px">
        <input name="title" type="text" class="title" value="<%= entry ? entry.title : '' %>"/>
    </div>
    <div style="margin-bottom:5px">
        <textarea name="markdown" rows="30" cols="40" class="markdown"><%= entry? entry.markdown : '' %></textarea>
    </div>
    <div>
        <div style="float:right">
            <a href="http://daringfireball.net/projects/markdown/syntax"><%= __("Syntax documentation") %></a>
        </div>
        <input type="submit" value="<%= entry ? __("Save changes") : __("Publish post") %>" class="submit"/>
        &nbsp;<a href="<%= entry ? "/entry/" + entry.slug : "/" %>"><%= __("Cancel") %></a>
    </div>
    <% if (entry) { %>
    <input type="hidden" name="id" value="<%= entry? entry._id : '' %>" />
<% } %>
<%- csrf_form_html %>
</form>
